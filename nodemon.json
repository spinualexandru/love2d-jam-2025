{
  "$schema": "https://raw.githubusercontent.com/SchemaStore/schemastore/refs/heads/master/src/schemas/json/nodemon.json",
  "watch": [
    "main.lua",
    "globals.lua",
    "conf.lua",
    "engine",
    "assets",
    "scenes",
    "ui",
    "game",
    "crt_shader.glsl",
    "shaders",
    "settings.json"
  ],
  "cwd": ".",
  "colours": true,
  "quiet": true,
  "ext": "lua",
  "exec": "DEV_MODE=true love .",
  "ignore": [
    ".idea",
    "LICENSE",
    "README.md",
    "lua_modules",
    ".git"
  ]
}